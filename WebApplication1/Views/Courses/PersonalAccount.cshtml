@model WebApplication1.ViewModels.UserViewModel

@if (User.IsInRole("Student"))
{
    <h2>Детали студента: @Model.Student.LastName @Model.Student.FirstName @Model.Student.MiddleName</h2>

    <div>
        <dl class="row">
            <dt class="col-sm-2">
                @Html.DisplayNameFor(model => model.Student.Username)
            </dt>
            <dd class="col-sm-10">
                @Html.DisplayFor(model => model.Student.Username)
            </dd>
            <dt class="col-sm-2">
                @Html.DisplayNameFor(model => model.Student.Email)
            </dt>
            <dd class="col-sm-10">
                @Html.DisplayFor(model => model.Student.Email)
            </dd>
            <dt class="col-sm-2">
                @Html.DisplayNameFor(model => model.Student.Phone)
            </dt>
            <dd class="col-sm-10">
                @Html.DisplayFor(model => model.Student.Phone)
            </dd>
        </dl>
    </div>

    <div>
        <a asp-action="EditPersonalAccount" asp-route-id="@Model.Student.Id" class="btn btn-primary">Изменить</a>
    </div>
} else
{
    <h2>Детали преподавателя: @Model.Teacher.Surname @Model.Teacher.Name</h2>

    <div>
        <a asp-action="EditPersonalAccount" asp-route-id="@Model.Teacher.ID" class="btn btn-primary">Изменить</a>
    </div>
}

