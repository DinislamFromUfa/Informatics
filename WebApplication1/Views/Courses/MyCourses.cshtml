@{
    var courses = new List<dynamic>
    {
        new { Title = "Основы программирования", Description = "Изучите основы программирования на Python.", Duration = "4 недели" },
        new { Title = "Веб-разработка", Description = "Создание веб-приложений с использованием HTML, CSS и JavaScript.", Duration = "6 недель" },
        new { Title = "Алгоритмы и структуры данных", Description = "Изучение основных алгоритмов и структур данных.", Duration = "5 недель" }
    };
}

<!DOCTYPE html>
<html lang="ru">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Мои курсы по информатике</title>
    <link rel="stylesheet" href="~/css/styles.css"> <!-- Подключение стилей -->
</head>
<body>
    <div class="container">
        <h1>Мои курсы по информатике</h1>
        <div class="courses-list">
            @foreach (var course in courses)
            {
                <div class="course-item">
                    <h2>@course.Title</h2>
                    <p>@course.Description</p>
                    <p><strong>Продолжительность:</strong> @course.Duration</p>
                </div>
            }
        </div>
    </div>
</body>
</html>