@{
    ViewData["Title"] = "Регистрация";
}

<script>
    function ValidateForm() {
        var password = document.getElementById("password").value;
        var confirmPassword = document.getElementById("confirmPassword").value;
        if (password !== confirmPassword || password.length < 6) {
            alert("Пароли не совпадают или длина пароля должна не менее 6 символов!");
            return false;
        }
        else {
            return true;
        }
    }
</script>
<div style="display: flex; justify-content: center; align-items: center; height: 100vh;">
    <form onSubmit="return ValidateForm()" method="post" asp-action="CreateProfile" style="border: 1px solid #ccc; padding: 20px; border-radius: 5px; box-shadow: 0 0 10px rgba(0,0,0,0.1); width: 300px;">
        <h2 style="text-align: center;">Регистрация для студента</h2>
        <div>
            <label for="username">Имя пользователя:</label>
            <input type="text" name="username" id="username" required style="width: 100%; padding: 8px; margin-bottom: 10px;" />
        </div>

        <div>
            <label for="lastname">Фамилия:</label>
            <input type="text" name="lastname" id="username" required style="width: 100%; padding: 8px; margin-bottom: 10px;" />
        </div>

        <div>
            <label for="firstname">Имя:</label>
            <input type="text" name="firstname" id="username" required style="width: 100%; padding: 8px; margin-bottom: 10px;" />
        </div>

        <div>
            <label for="middlename">Отчество:</label>
            <input type="text" name="middlename" id="username" required style="width: 100%; padding: 8px; margin-bottom: 10px;" />
        </div>

        <div>
            <label for="email">E-mail:</label>
            <input type="email" name="email" id="username" required style="width: 100%; padding: 8px; margin-bottom: 10px;" />
        </div>

        <div>
            <label for="phone">Телефон:</label>
            <input type="tel" name="phone" id="username" required style="width: 100%; padding: 8px; margin-bottom: 10px;" />
        </div>

        <div>
            <label for="password">Пароль:</label>
            <input type="password" name="password" id="password" required style="width: 100%; padding: 8px; margin-bottom: 10px;" />
        </div>

        <div>
            <label for="confirmPassword">Подтвердите пароль:</label>
            <input type="password" name="confirmPassword" id="confirmPassword" required style="width: 100%; padding: 8px; margin-bottom: 10px;" />
        </div>

        <div style="text-align: center;">
            <button type="submit" style="padding: 10px 20px; background-color: #007bff; color: white; border: none; border-radius: 5px; cursor: pointer;">
                Зарегистрироваться
            </button>
        </div>
    </form>
</div>
